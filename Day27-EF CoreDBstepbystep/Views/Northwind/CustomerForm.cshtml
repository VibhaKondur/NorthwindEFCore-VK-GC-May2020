
@{
    ViewData["Title"] = "CustomerForm";
}

<h1>Customer Form</h1>

<form action="/Northwind/AddCustomer" method="post">
    <input type="text" name="CustomerId" placeholder="Id" />
    <input type="text" name="LastName" placeholder="Last Name" />
    <input type="text" name="FirstName" placeholder="First Name" />

    <input type="text" name="ContactTitle" placeholder="Contact Title" />

    <input type="text" name="Address" placeholder="Address" />
    <input type="text" name="City" placeholder="City" />
    <input type="text" name="Region" placeholder="Region" />
    <input type="text" name="PostalCode" placeholder="zip" />
    <input type="text" name="Country" placeholder="Country" />
    <input type="text" name="Phone" placeholder="Phone" />
    <input type="text" name="Fax" placeholder="Fax" />
    <input type="submit" value="Add that new customer!" />

</form>
